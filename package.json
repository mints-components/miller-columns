{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --fix",
    "prettier": "prettier . --write",
    "build": "yarn workspace miller-columns-select build",
    "publish": "yarn workspace miller-columns-select publish",
    "start": "yarn workspace miller-columns-select-example dev",
    "postinstall": "husky install"
  },
  "repository": "git@github.com:mintsweet/miller-columns-select.git",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.2.1",
  "devDependencies": {
    "eslint": "^8.27.0",
    "eslint-config-mints": "^2.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.7.1"
  }
}
